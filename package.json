{
  "name": "vaman-ai",
  "private": true,
  "type": "module",
  "version": "0.1.0",
  "workspaces": ["packages/*"],
  "scripts": {
    "clean": "npm run clean --workspaces --if-present",
    "build": "npm run build -w packages/shared && npm run build -w packages/agent && npm run build -w packages/gateway && npm run build -w packages/cli",
    "dev": "npm run dev --workspaces --if-present",
    "check": "biome check --write . && tsc --noEmit",
    "test": "npm run test --workspaces --if-present"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.5",
    "@types/node": "^22.10.5",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4",
    "tsx": "^4.20.3"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
